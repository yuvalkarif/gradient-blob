{
  "compilerOptions": {
    "target": "es2022",
    "moduleDetection": "force",
    "baseUrl": "./src",
    "module": "NodeNext",
    /* If transpiling with TypeScript: */
    "moduleResolution": "NodeNext",
    "paths": { "@/*": ["./*"] },
    "resolveJsonModule": true,
    "allowJs": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    /* Base Options: */
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  }
}
