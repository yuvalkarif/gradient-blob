{
  "compilerOptions": {
    "target": "es2022",
    "baseUrl": "./",
    "rootDir": "./src",
    "module": "NodeNext",
    "paths": { "#@/*": ["./src/*"] },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
